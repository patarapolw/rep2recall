{
  "name": "rep2recall",
  "private": true,
  "scripts": {
    "preinstall": "npx check-npm-yarn",
    "build": "docker build -t rep2recall --build-arg VUE_APP_FIREBASE_CONFIG --build-arg VUE_APP_BASE_URL .",
    "dev": "concurrently 'cd packages/server && npm run dev' 'cd packages/ui && npm run serve'",
    "start": "docker run -p 8080:8080 -e MONGO_URI -e SECRET -e FIREBASE_SDK -e DEFAULT_USER rep2recall",
    "deploy": "heroku container:push web --arg VUE_APP_FIREBASE_CONFIG,VUE_APP_BASE_URL"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "concurrently": "^5.2.0",
    "eslint": ">=6.2.2",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": ">=9.1.0",
    "eslint-plugin-promise": ">=4.2.1",
    "eslint-plugin-standard": ">=4.0.0",
    "eslint-plugin-vue": "^6.1.2",
    "typescript": "^3.8.3"
  }
}
